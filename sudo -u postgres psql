sudo -u postgres psql
posgres=#

\? - !!!
\l - \list = list database
\c - \connect = connect to database_name
\du = user list
\d employees = the database structure
CREATE DATABASE employees;
CREATE USER testuser WITH PASSWORD 'yourpassword';
GRANT ALL PRIVILEGES ON DATABASE testdb TO testuser;
SELECT * FROM employees;
SELECT name, salary FROM employees WHERE department = 'IT';
UPDATE employees SET salary = salary * 1.1 WHERE department = 'IT';
DELETE FROM employees WHERE id = 1;
pg_dump -U postgres -d testdb > testdb_backup.sql = create dump
psql -U postgres -d testdb < testdb_backup.sql = restore dump
COPY employees TO '/tmp/employees.csv' DELIMITER ',' CSV HEADER; = export to CSV
COPY employees FROM '/tmp/employees.csv' DELIMITER ',' CSV HEADER; = import from CSV

