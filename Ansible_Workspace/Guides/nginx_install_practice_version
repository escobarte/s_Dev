---
- name: Install Nginx and dependencies on Ubuntu 24.04
  hosts: web
  become: yes

  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes
        cache_valid_time: 3600

    - name: Install required packages
      apt:
        name:
          - nginx
          - python3-pip
          - python3-venv
          - curl
          - git
          # Добавь свои зависимости, если нужны (например, build-essential, unzip и т.д.)
        state: present

    - name: Ensure Nginx is enabled and started
      service:
        name: nginx
        state: started
        enabled: yes
